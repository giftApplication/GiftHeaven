<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"

    tools:context="com.example.moon.giftheaven.views.fragments.FragmentEvent">

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        tools:ignore="Suspicious0dp">

        <com.kofigyan.stateprogressbar.StateProgressBar
            android:id="@+id/p_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            app:spb_animateToCurrentProgressState="true"
            app:spb_currentStateDescriptionColor="@color/color14"
            app:spb_currentStateNumber="three"
            app:spb_maxStateNumber="three"
            app:spb_stateBackgroundColor="@color/color2"
            app:spb_stateDescriptionColor="@color/color2"
            app:spb_stateForegroundColor="@color/color14" />


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foregroundGravity="center"
                android:fillViewport="true">


                <ListView
                    android:id="@+id/list_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="130dp"
                    android:background="@color/color1"
                    android:layout_marginBottom="55dp"
                  >

                </ListView>

            </ScrollView>


    </RelativeLayout>
</LinearLayout>






