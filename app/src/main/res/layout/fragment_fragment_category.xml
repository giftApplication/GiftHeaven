<LinearLayout

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.moon.giftheaven.views.fragments.FragmentEvent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"

    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <RelativeLayout

        android:layout_weight="2"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        tools:ignore="Suspicious0dp">

        <com.kofigyan.stateprogressbar.StateProgressBar
            android:id="@+id/p_bar"
            android:layout_width="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_height="wrap_content"
            app:spb_stateBackgroundColor="@color/color2"
            app:spb_stateForegroundColor="@color/color14"
            app:spb_currentStateDescriptionColor="@color/color14"
            app:spb_stateDescriptionColor="@color/color2"
            app:spb_currentStateNumber="two"
            app:spb_animateToCurrentProgressState="true"
            app:spb_maxStateNumber="three"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foregroundGravity="center"
            android:fillViewport="true">


        <ListView
            android:id="@+id/list_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="130dp"
            android:background="@color/color1"
            android:layout_marginBottom="55dp"
            >

        </ListView>
        </LinearLayout>





    </RelativeLayout>
</LinearLayout>
