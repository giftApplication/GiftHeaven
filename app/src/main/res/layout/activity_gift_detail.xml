<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:isScrollContainer="true"
    tools:context="com.example.moon.giftheaven.views.activities.gift_detail">

    <include
        android:id="@+id/mytoolbar"
        layout="@layout/toolbar"

        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
    </include>


    <TextView
        android:id="@+id/heading"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"

        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="Product Detail"
        android:fontFamily="cursive"
        android:textColor="@color/color14"
        android:textSize="35dp"
        android:layout_below="@+id/mytoolbar"
        android:textStyle="bold" />
    <ScrollView
        android:layout_height="match_parent"
        android:layout_marginTop="160sp"
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent">

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:isScrollContainer="true"

            >


    <ImageView
        android:id="@+id/img_gift"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="29dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:scaleType="fitCenter"
     />

    <Button
        android:id="@+id/btn_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_d1_3"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_bg"
        android:fontFamily="serif"
        android:paddingLeft="55dp"
        android:paddingRight="55dp"
        android:text="Shop Here"
        android:textAllCaps="false"
        android:textColor="@color/color1"
        android:textSize="15dp"
        android:layout_marginBottom="15dp"
        android:textStyle="bold" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:layout_alignTop="@+id/img_gift"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/img_gift"
                android:layout_toRightOf="@+id/img_gift"
                android:text="Name:"
                android:textStyle="bold"
                android:textColor="@color/color14"
                android:textSize="15dp"
                />

     <TextView
        android:id="@+id/text1_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:layout_alignTop="@+id/img_gift"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="25dp"
        android:layout_toEndOf="@+id/img_gift"
        android:layout_toRightOf="@+id/img_gift"
        android:text=""
         android:maxLines="3"

         android:maxHeight="19dp"
        android:textColor="@color/color14"
        android:textSize="15dp"
         />

            <TextView

                android:id="@+id/text_1"
                android:fontFamily="serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/text1_1"
                android:layout_alignStart="@+id/text1_1"
                android:layout_below="@+id/text1_1"
                android:text="Price:"
                android:textStyle="bold"
                android:textColor="@color/color14"
                android:textSize="15dp"
                />

    <TextView

        android:id="@+id/text_d1_1"
        android:fontFamily="serif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text1_1"
        android:layout_alignStart="@+id/text1_1"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/text_1"
        android:text=""
        android:textColor="@color/color14"
        android:textSize="15dp"
       />

            <TextView

                android:id="@+id/text_3"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/img_gift"
                android:layout_marginTop="20dp"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:text="About the Gift:"
                android:textColor="@color/color14"
                android:textSize="15dp"
                />

    <TextView

        android:id="@+id/text_d1_3"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/img_gift"
        android:layout_marginTop="50dp"
        android:fontFamily="serif"
        android:text="It is multi coloured charm bracelet. Stones of very fine quality and of different colours are embedded. Delicate but durable, this open bracelet can be worn alone, or layered with your other favourite bracelets. "
        android:textColor="@color/color14"
        android:textSize="15dp"
         />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>

